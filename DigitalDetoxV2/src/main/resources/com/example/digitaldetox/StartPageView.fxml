<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="600.0" spacing="20" style="-fx-border-radius: 5; -fx-border-color: #FFA500; -fx-border-width: 5; -fx-background-color: white; -fx-background-radius: 5px;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.digitaldetox.controller.StartPageController">
    <padding>
        <Insets top="40" />
    </padding>
    <VBox alignment="TOP_CENTER">
        <Text fill="#0eb02f" stroke="#2a7e3b" strokeLineCap="ROUND" strokeLineJoin="ROUND" style="-fx-font-size: 40px;"
              textAlignment="CENTER">
            <font>
                <Font name="Gill Sans MT Bold" size="40.0"/>
            </font>
            UNPLUGIFY
        </Text>
    </VBox>
    <VBox alignment="CENTER" spacing="20">
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="loginButton" onAction="#onLoginButtonClick" prefHeight="31.0" prefWidth="58.0" style="-fx-text-fill: white; -fx-background-color: green; -fx-border-color: #006400; -fx-border-width: 1px; -fx-border-radius: 5px; -fx-background-radius: 5px;" text="Log in" textFill="WHITE">
            <font>
               <Font name="Gill Sans MT" size="12.0" />
            </font></Button>
            <Button fx:id="signUpButton" onAction="#onSignUpButtonClick" prefHeight="31.0" prefWidth="58.0" style="-fx-background-color: green; -fx-border-color: #006400; -fx-border-width: 1px; -fx-border-radius: 5px; -fx-background-radius: 5px;" text="Sign up" textFill="WHITE" />
        </HBox>

        <Button fx:id="quitButton" onAction="#onQuitButtonClick" prefWidth="125" style="-fx-text-fill: white; -fx-background-color: red; -fx-border-color: #8B0000; -fx-border-width: 1px; -fx-border-radius: 5px; -fx-background-radius: 5px;" text="Quit" textFill="WHITE" />

    </VBox>

</VBox>

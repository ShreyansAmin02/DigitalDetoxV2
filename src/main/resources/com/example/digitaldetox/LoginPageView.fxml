<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>


<?import javafx.scene.control.Button?>

<?import javafx.scene.control.TextField?>


<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.PasswordField?>

<GridPane alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.digitaldetox.controller.MainPageController" hgap="10" vgap="10">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <Label text="Username: " GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <Label text="Password: " GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <TextField fx:id="usernameTextField" GridPane.columnIndex="1" GridPane.rowIndex="0" maxWidth="150"/>
    <PasswordField fx:id="passwordTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" maxWidth="150"/>

    <Label fx:id="loginstatus" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-text-fill: #ff0000" maxWidth="150"/>

    <Button fx:id="loginToAccountButton" text="Log in" onAction="#onLoginToAccountClick" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Button fx:id="backButton" text="Back" onAction="#onBackButtonClick" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

</GridPane>


